var detail = function(data){
	//Creates window for my answers.
	
		
	var detailWindow = Ti.UI.createWindow({
		title: data.title,
		backgroundColor: "#efefef",
		fullscreen: true,
	});
	
	var detailScrollView = Ti.UI.createScrollView({
	  contentWidth: "auto",
	  contentHeight: "auto",
	  showVerticalScrollIndicator: true,
	  showHorizontalScrollIndicator: false,
	  height: "100%",
	  width: "100%"
	});
	
	var cars = Ti.UI.createImageView({
		top: 0,		
		image: data.image,
	});
	console.log(cars.height);
	var backLabel1 = Ti.UI.createLabel({
	text: "Back",
	color: "#efefef",
	top: 5,
	left: 10,
	font: {fontSize: 20, fontFamily: "Helvetica", fontWeight: "light"},
});

var specs = Ti.UI.createLabel({
		text: "Specs",
		font: {fontSize: 22, fontFamily: "Helvetica", fontWeight: "light"},
		color: "305b7f",
		left: 13,
		top:  250,
	});
	
	var specsLabel = Ti.UI.createLabel({
		text: "KBB Review\nMPG\nHP\nEngine\nCylinders\nTorque\nTrims",
		font: {fontSize: 18, fontFamily: "Helvetica", fontWeight: "light"},
		color: "#66afac",
		left: 13,
		top:  specs.top + 30,
		textAlign: Ti.UI.TEXT_ALIGNMENT_RIGHT,
	});
	
	var actualSpecs = Ti.UI.createLabel({
		text: "KBB Review\nMPG\nHP\nEngine\nCylinders\nTorque\nTrims",
		font: {fontSize: 18, fontFamily: "Helvetica", fontWeight: "light"},
		color: "#1f1f1f",
		right: 100,
		top:  specs.top + 30,
		textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
	});
	
	// I use data.title to pull the information from the JSON data. 
	
	var detailText = Ti.UI.createLabel({
		text: data.desc,
		top: 500,
		left: 15,
		right: 15,
		font: {fontSize: 18, fontFamily: "Helvetica", fontWeight: "light"},
		color: "#1f1f1f",
	});
	
	// I use a empty view to keep my text margins away from the edge of the screen, I'm not exactly sure if there is a better way of doing this.
	
	
	var overView = Ti.UI.createLabel({
		text: "Overview",
		font: {fontSize: 22, fontFamily: "Helvetica", fontWeight: "light"},
		color: "347998",
		left: 13,
		top: detailText.top - 25,
	});
	
	
	
	var carName = Ti.UI.createView({
			backgroundColor:"#305b7f",
			bottom: 0, 
			height: 50,
		    opacity: .8,
	});
	
	var carNameLabel = Ti.UI.createLabel({
		text: "2014 " + data.title ,
		left: 20,
		font: {fontSize: 24, fontFamily: "Helvetica", fontWeight: "light"},
		color: "#fff",
	});
	

backLabel1.addEventListener("click", function(openData){
	detailWindow.close({
		transition: Ti.UI.iPhone.AnimationStyle.FLIP_FROM_LEFT
	});
});

	carName.add(carNameLabel);
	cars.add(carName);
	detailScrollView.add(cars, backLabel1,detailText, overView, specs, specsLabel, actualSpecs );
	detailWindow.add(detailScrollView);
	detailWindow.open({ transition: Ti.UI.iPhone.AnimationStyle.FLIP_FROM_LEFT});
};


scrollView.addEventListener("click", function(event){
	detail(event.source);
});




chevyButton.add(chevyLabel);
fordButton.add(fordLabel);
kiaButton.add(kiaLabel);
hyundaiButton.add(hyundaiLabel);
dodgeButton.add(dodgeLabel);
hondaButton.add(hondaLabel);
mazdaButton.add(mazdaLabel);
view.add(topLabel, sevenLabel, carsLabel, ofLabel, fourteenLabel, backLabel);
scrollView.add(view, mazdaButton, hondaButton, dodgeButton, hyundaiButton, kiaButton, fordButton, chevyButton);
win.add(scrollView);




backLabel.addEventListener("click", function(openData){
	win.close({
		transition: Ti.UI.iPhone.AnimationStyle.FLIP_FROM_LEFT
	});
	mainWindow.close();
});

questionsPageButton.addEventListener("click", function(openData){
	win.open({
		transition: Ti.UI.iPhone.AnimationStyle.FLIP_FROM_RIGHT
	});
	mainWindow.close();
});