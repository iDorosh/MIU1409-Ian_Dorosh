Titanium.UI.setBackgroundColor('#000');


//Main screen text and views.
var mainWindow = Ti.UI.createWindow({
	backgroundColor: "#000",
	fullscreen: true,
});

var backgroundImage = Ti.UI.createImageView({
	image: "images/background1.jpg",
});

var auto = Ti.UI.createLabel({
	text: "Auto",
