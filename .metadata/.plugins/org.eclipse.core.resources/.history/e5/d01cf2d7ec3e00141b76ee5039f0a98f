});

var insider = Ti.UI.createLabel({
	text: "Insider",
	color: "#fff",
	top: 150,
	right: 33,
	font: {fontSize: 70, fontFamily: "Helvetica", fontWeight: "regular"},
});

var questionsPageButton = Ti.UI.createView({
	top: 355,
	backgroundColor: "305b7f",
