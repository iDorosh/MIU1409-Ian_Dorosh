// this sets the background color of the master UIView (when there are no windows/tab groups on it)
Titanium.UI.setBackgroundColor('#000');

var mainWindow = Ti.UI.createWindow({
	backgroundColor: "#efefef",
	fullscreen: true,
	navBarHidden: true,
});

var viewTrips = Ti.UI.createLabel({
	top: 320,
	text: "View Trips",
	color: "94bc5b",
	font: {fontSize: 34, fontFamily: "Helvetica", fontWeight: "Lite"},
});

var logInButtonHome = Ti.UI.createLabel({
	top: 400,
	text: "Login",
	color: "94bc5b",
	font: {fontSize: 28, fontFamily: "Helvetica", fontWeight: "Lite"},
});

var tripifyHome = Ti.UI.createLabel({
	top: 130,
	text: "Tripify",
	color: "#94bc5b",
	font: {fontSize: 80, fontFamily: "Helvetica", fontWeight: "bold"},
});


mainWindow.add(logInButtonHome,tripifyHome, viewTrips); 


var navWindow = Ti.UI.iOS.createNavigationWindow({
	window: mainWindow,
});

